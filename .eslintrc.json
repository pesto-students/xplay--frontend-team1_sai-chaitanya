{
	"extends": [
		"eslint:recommended",
		"plugin:import/errors",
		"plugin:react/recommended",
		"plugin:jsx-a11y/recommended"
		// "plugin:prettier/recommended"
	],
	"plugins": ["react", "import", "jsx-a11y"],
	"rules": {
		"react/prop-types": 0,
		"indent": 0,
		"linebreak-style": 0,
		"quotes": 0
		// "prettier/prettier": [
		// 	"error",
		// 	{
		// 		"endOfLine": "auto",
		// 		"printWidth": 80,
		// 		"useTabs": true
		// 	}
		// ]
	},
	"parserOptions": {
		"ecmaVersion": 2021,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"env": {
		"es6": true,
		"browser": true,
		"node": true
	},
	"settings": {
		"import/resolver": {
			"node": {
				"extensions": [".js", ".jsx"]
			}
		},
		"react": {
			"version": "detect"
		}
	}
}
